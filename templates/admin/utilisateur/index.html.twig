{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/utilisateur/admin-style.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
{% endblock %}

{% block content %}
<div class="dropdown-container">
    <div class="table-container">
        <a href="{{ path('app_admin_accueil') }}" class="btn btn-secondary">Accueil</a>
        <h1 class="table-title">Utilisateurs</h1>
        <table class="table striped-table">
            <thead>
                <tr>
                    <th>
                        <i class="fa-solid fa-user icon-user"></i> Nom
                    </th>
                    <th>
                        <i class="fa-solid fa-envelope icon-email"></i> Email
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for utilisateur in utilisateurs %}
                <tr>
                    <td>{{ utilisateur.nom }}</td>
                    <td>{{ utilisateur.mail }}</td>
                    <td>
                        <a href="{{ path('app_admin_utilisateur_edit', { 'id': utilisateur.id }) }}" class="btn btn-warning btn-sm btn-custom">
                            Modifier
                        </a>
                        <form action="{{ path('app_admin_utilisateur_delete', { 'id': utilisateur.id }) }}" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-danger btn-sm btn-custom">
                                Supprimer
                            </button>
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ utilisateur.id) }}">
                        </form>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
