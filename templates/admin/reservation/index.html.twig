{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/reservation/admin-style.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
{% endblock %}

{% block content %}
<div class="dropdown-container">
    <div class="table-container">
        <a href="{{ path('app_admin_accueil') }}" class="btn btn-secondary">
            <i class="fa-solid fa-house"></i> Accueil
        </a>
        <h1 class="table-title">RÃ©servations</h1>
        <table class="table striped-table">
            <thead>
                <tr>
                    <th>
                        <i class="fa-solid fa-user icon-user"></i> Utilisateur
                    </th>
                    <th>
                        <i class="fa-solid fa-plane icon-flight"></i> Vol
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for reservation in reservations %}
                <tr>
                    <td>
                        {{ reservation.utilisateur.nom }}
                    </td>
                    <td>
                        {{ reservation.vol.numVol}}
                    </td>
                    <td>
                        <a href="{{ path('app_admin_reservation_edit', { 'id': reservation.id }) }}" class="btn btn-warning btn-sm btn-custom">
                            Modifier
                        </a>
                        <form action="{{ path('app_admin_reservation_delete', { 'id': reservation.id }) }}" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-danger btn-sm btn-custom">
                                Supprimer
                            </button>
                        </form>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
