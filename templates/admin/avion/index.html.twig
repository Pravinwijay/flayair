{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/avion/style.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
{% endblock %}

{% block content %}
<div class="dropdown-container">
    <div class="table-container">
        <a href="{{ path('app_admin_accueil') }}" class="btn btn-secondary">
            <i class="fa-solid fa-house"></i> Accueil
        </a>
        <h1 class="table-title">Avions</h1>
        <table class="table striped-table">
            <thead>
                <tr>
                    <th>
                        <i class="fa-solid fa-plane icon-airplane"></i> Mod√®le
                    </th>
                    <th>
                        <i class="fa-solid fa-users icon-users"></i> Nombre de places
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for avion in avions %}
                <tr>
                    <td>{{ avion.modele }}</td>
                    <td>{{ avion.nbPlaces }}</td>
                    <td>
                        <a href="{{ path('app_admin_avion_edit', { 'id': avion.id }) }}" class="btn btn-warning btn-sm btn-custom">
                            Modifier
                        </a>
                        <form action="{{ path('app_admin_avion_delete', { 'id': avion.id }) }}" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-danger btn-sm btn-custom">
                                Supprimer
                            </button>
                        </form>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
